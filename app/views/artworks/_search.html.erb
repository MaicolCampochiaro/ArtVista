<%= form_with url: root_path, method: :get do |f| %>
  <div class="d-flex">
    <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Type a keyword"
      %>
    <%= submit_tag "Search", name: "", class: "button btn btn-primary" %>
  </div>
  <div data-controller="toggle" class="col-6 mx-auto">
    <button data-action="click->toggle#fire" class="my-2 btn btn-outline-primary">More filters:</button>
    <div data-toggle-target="togglableElement" class="d-none">
      <h4 class="mt-3 text-center">Choose the filters:</h4>
      <div class="d-flex flex-wrap container row align-items-center">
        <%= f.collection_check_boxes :tag, Tag.order(:name), :id, :name, {multiple: true} do |c| %>
          <div class="col-4 my-2">
            <%= c.check_box %>
            <%= c.label %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
<% end %>
