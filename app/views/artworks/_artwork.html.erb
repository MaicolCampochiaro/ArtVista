<div id="<%= dom_id artwork %>">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag artwork.image, id: "card_image" %>
  <% end %>
  <div class="card-trip-infos">
    <div>
      <h5>
        <strong><%= artwork.title %></strong>
      </h5>

      <p>
        <strong>Description:</strong>
        <%= artwork.description %>
      </p>

      <p id="show_art_work">
            <%= link_to "Show this artwork", artwork_path(artwork) %>
          </p>
    </div>

    <div class="card-trip-pricing">
      <p>
        <%= number_to_currency(artwork.price.round(2).round(0.05), unit: "CHF", format: "%n %u") %>
      </p>
    </div>
    <%= image_tag artwork.user.avatar, class: "card-trip-user avatar-bordered" %>
  </div>
</div>
