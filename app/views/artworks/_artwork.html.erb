<div id="<%= dom_id artwork %>">
  <% if artwork.image.attached? %>
    <p style="text-align: center;">
      <%= image_tag artwork.image, height: 200, id: "card_image" %>
    </p>
  <% end %>
  <p>
    <strong>Title:</strong>
    <%= artwork.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= artwork.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= artwork.user_id %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= artwork.size %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= artwork.price %>
  </p>
</div>
